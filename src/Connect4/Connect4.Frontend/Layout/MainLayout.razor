@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider CloseButton="true"
                   FullWidth="true"
                   MaxWidth="MaxWidth.Medium"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudLink Color="Color.Default" Typo="Typo.h5" Href="/" Underline="Underline.None" Class="ml-3">Connect 4</MudLink>
        <MudSpacer/>
        @* TODO Bestenliste implementieren *@
        <MudIconButton Href="/visualizers" Icon="fas fa-robot" Color="Color.Primary" Style="margin-right: 10px"></MudIconButton>
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="p-3" MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
            <MudLink Typo="Typo.caption" Target="_blank" Style="position:fixed; bottom:0; right:0; margin:2px" href="https://www.freepik.com/free-vector/30-avatar-icons_1040569.htm#query=avatar%20collection&position=1&from_view=keyword&track=ais_user&uuid=264f61cc-7fe5-49e6-8ade-0b993664740f">Avatars by GraphiqaStock on Freepik</MudLink>
        </MudContainer>
    </MudMainContent>
</MudLayout>
